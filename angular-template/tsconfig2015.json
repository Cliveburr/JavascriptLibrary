{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "pretty": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": false,
    "noFallthroughCasesInSwitch": true,
    "outDir": "./dist",
    //"rootDir": "./aot/app",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
       "node"
    ]
  },
  "compileOnSave": false,
  "files": [
    "aot/app/main-aot.ts"
  ]
}