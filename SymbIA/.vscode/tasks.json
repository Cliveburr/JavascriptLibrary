{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build All",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "build"
      ],
      "group": "build",
      "problemMatcher": {
        "owner": "typescript",
        "source": "ts",
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": "$tsc"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Watch API",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "--filter",
        "@symbia/api",
        "dev"
      ],
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "source": "ts",
        "applyTo": "closedDocuments",
        "fileLocation": [
          "relative",
          "${workspaceFolder}/api"
        ],
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\s*\\[.*\\]\\s*File change detected\\.|Starting compilation",
          "endsPattern": "^\\s*\\[.*\\]\\s*Found 0 errors\\. Watching for file changes\\.|Watching for file changes\\.|waiting for file changes"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "runOptions": {
        "instanceLimit": 1
      }
    },
    {
      "label": "Watch Web",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "--filter",
        "@symbia/web",
        "dev"
      ],
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "owner": "vite",
        "source": "vite",
        "fileLocation": [
          "relative",
          "${workspaceFolder}/web"
        ],
        "pattern": [
          {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error)\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\s*VITE.*building for.*|^\\s*building for.*",
          "endsPattern": "^\\s*.*Local:.*http.*|^\\s*.*ready in.*|^\\s*.*Local.*ready.*"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "runOptions": {
        "instanceLimit": 1
      }
    },
    {
      "label": "Dev: API + Web",
      "dependsOrder": "parallel",
      "dependsOn": [
        "Watch API",
        "Watch Web"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Build Interfaces",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "--filter",
        "@symbia/interfaces",
        "build"
      ],
      "group": "build",
      "problemMatcher": {
        "owner": "typescript",
        "source": "ts",
        "fileLocation": [
          "relative",
          "${workspaceFolder}/interfaces"
        ],
        "pattern": "$tsc"
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Build Core",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "--filter",
        "@symbia/core",
        "build"
      ],
      "group": "build",
      "problemMatcher": {
        "owner": "typescript",
        "source": "ts",
        "fileLocation": [
          "relative",
          "${workspaceFolder}/core"
        ],
        "pattern": "$tsc"
      },
      "dependsOn": [
        "Build Interfaces"
      ],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Build API",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "--filter",
        "@symbia/api",
        "build"
      ],
      "group": "build",
      "problemMatcher": {
        "owner": "typescript",
        "source": "ts",
        "fileLocation": [
          "relative",
          "${workspaceFolder}/api"
        ],
        "pattern": "$tsc"
      },
      "dependsOn": [
        "Build Core"
      ],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Launch Chrome Debug",
      "type": "shell",
      "command": "start",
      "args": [
        "chrome",
        "--remote-debugging-port=9222",
        "--user-data-dir=${workspaceFolder}/.chrome-debug",
        "http://localhost:3001"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "windows": {
        "command": "start",
        "args": [
          "chrome",
          "--remote-debugging-port=9222",
          "--user-data-dir=${workspaceFolder}/.chrome-debug",
          "http://localhost:3001"
        ]
      },
      "problemMatcher": {
        "owner": "chrome",
        "source": "chrome",
        "fileLocation": "absolute",
        "pattern": {
          "regexp": "^(.*)$",
          "message": 1
        }
      }
    }
  ]
}