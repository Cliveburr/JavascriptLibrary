{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "composite": true
  },
  "include": [
    "src/**/*",
    "tests/helpers/parseMarkdown.test.ts",
    "tests/helpers/parseMarkdown.example.ts",
    "tests/helpers/test-simple.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ]
}